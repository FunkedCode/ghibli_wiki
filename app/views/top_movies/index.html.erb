<p id="notice"><%= notice %></p>

<h1>Top Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @top_movies.each do |top_movie| %>
      <tr>
        <td><%= link_to top_movie.title, top_movie %></td>
        <td><%= link_to 'Edit', edit_top_movie_path(top_movie) %></td>
        <td><%= link_to 'Destroy', top_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Top Movie', new_top_movie_path %>
