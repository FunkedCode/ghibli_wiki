<p id="notice"><%= notice %></p>

<h1>Character Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @character_types.each do |character_type| %>
      <tr>
        <td>
          <img src=<%= image_url( "species/#{character_type.name.downcase}.png") %>>
          <%= link_to character_type.name, character_type %>
        </td>
        <td><%=character_type.classification %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character Type', new_character_type_path %>
