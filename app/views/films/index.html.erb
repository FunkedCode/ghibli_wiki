<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Score</th>
    </tr>
  </thead>

  <tbody>
    <% count = 1 %>
    <% @films.each do |film| %>
      <tr>
        <td>
          <%= link_to film do %>
            <p><%= "#{count}. #{film.title}" %></p>
            <img class="list_poster" src=<%= image_url("movie_posters/" + film.title.parameterize.underscore + ".jpg") %> alt="poster">
            <% count +=1 %>
          <%end %>
        </td>
        <td><%=  film.rt_score %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
